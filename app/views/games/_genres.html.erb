<h1> <%= link_to "Genre Name", root_path%> </h1>
<div id="games">
  <% @games.each do |game|%>
    <% if game.thumbnail.attached? %>
      <%= link_to image_tag(game.resized_thumbnail), game %>
    <% else %>
      <div style="width: 240px; height: 135px">
        <%= link_to game.title, game%>
      </div>
    <% end %>
  <% end %>
</div>